<Window x:Class="PokemonTCG.NewPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonTCG"
        mc:Ignorable="d"
        Title="Add New Player" Height="200" Width="300" Background="{StaticResource DarkBackground}" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Foreground="WhiteSmoke" x:Name="label" Content="NAME" HorizontalAlignment="Left" Margin="105,10,0,0" VerticalAlignment="Top" Width="84" FontSize="25"/>
        <TextBox x:Name="NewPlayerNameBox" HorizontalAlignment="Left" Height="31" Margin="75,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" HorizontalContentAlignment="Center" FontSize="20" VerticalContentAlignment="Center"/>
        <Button x:Name="SaveBtn" Content="Save" HorizontalAlignment="Left" Margin="110,124,0,0" VerticalAlignment="Top" Width="75" Click="SaveBtn_Click"/>

    </Grid>
</Window>
